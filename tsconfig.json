{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "removeComments": false,
    "lib": [
        "es2015",
        "dom"
    ],
    "noImplicitAny": false,
    "outDir": "es5"
  },
  "angularCompilerOptions": {
	"genDir": "compiled"
  },
  "types":[
    "core-js",
    "node"
  ],
  "exclude": [
    "node_modules"
  ]
}

